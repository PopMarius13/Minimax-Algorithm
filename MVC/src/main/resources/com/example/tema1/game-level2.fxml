<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.tema1.GameLevel2Controller"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Game Level 2" alignment="CENTER"/>
    <Label fx:id="gameOver" alignment="CENTER"/>
    <Label fx:id="labelWin" alignment="CENTER"/>
    <HBox alignment="CENTER" spacing="20">
        <Button text="Restart" fx:id="restart" alignment="CENTER" onAction="#onRestartButtonClick"/>
        <Button text="Back to Menu" fx:id="menu" alignment="CENTER" onAction="#onMenuButtonClick"/>
    </HBox>
    <GridPane fx:id="gridPane" alignment="CENTER"/>
    <GridPane fx:id="arrowPane" alignment="CENTER">
        <Label text="Select Arrow" />
    </GridPane>
</VBox>
